type Query {
    """ 모든 게시판 조회 """
    getBoardList: BoardList!
    """ 게시판 조회 """
    getBoard(boardId: ID!): BoardResponse!
    """ 모든 게시글 조회 """
    getPostList: PostList!
    """ 게시글 조회 """
    getPost(postId: ID!): PostResponse!
    """ 게시글 총 득표수 조회 """
    getTotalPickCount(postId: ID!): Int!
    """ 찜 목록 전체 조회 """
    getItemWishList: ItemList!
    """ 상품 정보 리스트 조회 """
    getItemInfoListByIdList(itemIdList: [ID!]!): ItemList
    """ 게시글 투표 결과 조회 """
    getPickResult(postId: ID!): [PickResult!]!
}

type BoardResponse {
    """ 게시판 아이디 """
    id: ID!
    """ 게시판 이름 """
    boardName: String!
    """ 게시판 내 포스트 아이디 목록 """
    postIdList: [ID!]!
}

type PostResponse {
    postId: ID!
    title: String!
    content: String
    pickList: [PickResponse!]!
}

type PickResponse {
    pickId: ID!
    itemId: ID!
    itemName: String!
    pickCount: Int!
    imageUrl: String!
}

type BoardList {
    """ 총 수 """
    totalCount: Int!
    """ 게시판 응답 데이터 리스트 """
    itemList: [BoardResponse!]!
}

type PostList {
    """ 총 수 """
    totalCount: Int!
    """ 게시글 응답 데이터 리스트 """
    itemList: [PostResponse!]!
}

type ItemList {
    """ 총 수 """
    totalCount: Int!
    """ 상품 응답 데이터 리스트 """
    itemList: [ItemInfoResponse!]!
}

type ItemInfoResponse {
    """ 아이템 아이디 """
    itemId: ID!
    """ 상품 이름 """
    itemName: String!
    """ 상품 이미지 URL """
    itemImageUrl: String!
    """ 상품 가격 """
    originPrice: Int!
}

type PickResult {
    """ Pick 아이디 """
    pickId: ID!
    """ 상품 아이디 """
    itemId: ID!
    """ 득표 수 / 총 특표 수 """
    pickResult: Float!
}

type Mutation {
    """ 새로운 게시판 생성 """
    createBoard(input: CreateBoardInput): Boolean!
    """ pick 아이템으로 새로운 포스트 생성 """
    createPost(input: CreatePostInput): Boolean!
    """ 상품 pick """
    pickItem(postId: ID!, itemId: ID): Boolean!
    """ 상품 pick 취소 """
    unPickItem(postId: ID!, itemId: ID): Boolean!
}

input CreateBoardInput {
    """ 생성할 게시판 이름 """
    boardName: String!
}

input CreatePostInput {
    """ 포스트 제목 """
    postTitle: String!
    """ 포스트 내용 """
    content: String
    """ 투표할 pick 상품 목록 """
    itemInfoInputList: [ItemInfoInput!]!
    """ 게시할 게시판 아이디 """
    boardId: ID!
}

input ItemInfoInput {
    """ 상품 아이디 """
    itemId: ID!
    """ 상품 이름 """
    itemName: String!
    """ 상품 이미지 URL """
    itemImageUrl: String!
    """ 상품 가격 """
    originPrice: Int!
}

schema {
    query: Query
    mutation: Mutation
}